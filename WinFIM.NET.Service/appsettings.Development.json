{
  "Serilog": {
    "MinimumLevel": "Information", // Serilog minimum-level available settings: Verbose, Debug, Information, Warning, Error, Fatal
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions", // documentation per https://github.com/serilog/serilog-expressions
            "template": "{ {@t, @l, @m, @x, ..@p} }\n" // JSON formatted output, where @t = time, @l = level, @m = message, @x = Exception, @p = properties
            //"template": "[{@t:HH:mm:ss} {@l:u3} {@mt}\n{@x}{#each k, v in @p}{k} = {v}\n{#end}\n\n" //Human friendly text output, showing 1 property per line
            //"template": "[{@t:HH:mm:ss} {@l:u3} {@m}\n{@x}" //The default Serilog console output
          }
        }
      }
    ]
  },
  "ConfigurationOptions": {
    "IsLogToWindowsEventLog": false,
    "IsCaptureRemoteConnectionStatus": false,
    "Timer": "0" // What timer / frequency / schedule the application will run. A value of 1 = 1 minute, 1s = 1 second, 1m = 1 minute, 1h = 1 hour, 1d = 1 day
  }
}